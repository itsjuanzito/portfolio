---
import { ClientRouter, fade } from 'astro:transitions'
const { titulo } = Astro.props
import '/src/styles/global.css'
import '@fontsource/mulish'
---

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{titulo}</title>
    <ClientRouter />
</head>
<body>
    <header>
        <nav class="navegacao">
            <ul class="menu">
                <li>
                    <a transition:animate={fade({ duration: '0.1s' })} class="menu-link" href="/" transition:name="contato">
                        In√≠cio
                    </a>
                </li>
                <li>
                    <a transition:animate={fade({ duration: '0.1s' })} transition:name="blog" class="menu-link" href="/blog">Blog</a>
                </li>
				<li>
					<a transition:animate={fade({ duration: '0.1s' })} class="menu-link" href="/contato" transition:name="contato">
						Contato
					</a>
				</li>
            </ul>
        </nav>
    </header>
	<main>
		<slot />
	</main>
</body>
</html>

<style>
     * {
        margin: 0;
        padding: 0px;
        box-sizing: border-box;
		font-family: "Mulish";
	}

	html {
		scroll-behavior: smooth;
	} 

    body {
		background-color: #17181c;
		color: white;
	}

    .navegacao {
		position: fixed;
		top: 0;
		width: 100%;
		padding: 15px;
		z-index: 100;
		height: 90px;
	}

	.menu {
		display: flex;
		gap: 80px;
		justify-content: center;
		font-weight: 500;
		padding: 15px;
	}

	.menu-link {
		position: relative;
		padding: 0.5rem;
	}

	.menu-link::after {
		content: '';
		height: 2px;
		position: absolute;
		width: 0;
		bottom: 0;
		left: 0;
		background: linear-gradient(90deg, #d31ff7, rgba(186, 82, 255, 0.533));
		transition: width 0.5s ease;
	}

	.menu-link:hover::after {
		width: 100%;
	}
</style>